@page "/Kisipage"
<h1>FirstSample</h1>
@if (_listKisi == null) //@ ile C# kodu yazdigimizi belirtiyoruz.
{
	<p>Yükleniyor...</p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>@nameof(Kisi.Adi)</th>
				<th>@nameof(Kisi.Soyadi)</th>
				<th>@nameof(Kisi.Cinsiyeti)</th>
				<th>@nameof(Kisi.DogumYeri)</th>
				<th>@nameof(Kisi.DogumYili)</th>

			</tr>
		</thead>
		<tbody>
			@foreach(var item in _listKisi)
			{
				<tr>
					<td>@item.Adi</td>
					<td>@item.Soyadi</td>
					<td>@item.Cinsiyeti</td>
					<td>@item.DogumYeri</td>
					<td>@item.DogumYili</td>
				</tr>
			}
		</tbody>
	</table>
}
@code {
	readonly Kisi _kisi = new();
	List<Kisi> _listKisi;
	protected override async Task OnInitializedAsync() //Asenkron oldugu icin asenkron olarak cagirmamiz gerekiyor.
	=> _listKisi = _kisi.KisilerListesi();
}
